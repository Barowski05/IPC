{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar C++ (g++)",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++23",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Tarefa para compilar o arquivo C++ usando g++."
        }
    ]
}